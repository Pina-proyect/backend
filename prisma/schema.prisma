generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Creator {
  id                 String   @id @default(uuid())
  fullName           String
  email              String   @unique
  // Contraseña opcional para cuentas OAuth (Google/Facebook)
  password           String?
  // Teléfono opcional: proveedores OAuth no lo suministran
  phone              String?
  // DNI opcional: se completará en onboarding (para cuentas OAuth)
  nationalId         String?  @unique
  birthDate          DateTime
  // Proveedor de autenticación (por defecto credenciales)
  provider           String   @default("credentials")
  // ID único proporcionado por el proveedor (Google/Facebook)
  providerId         String?
  // Versión de tokens para invalidar refresh tokens en logout
  tokenVersion       Int      @default(0)
  verificationStatus String   @default("pending")
  selfiePath         String?
  photoPath          String?
  createdAt          DateTime @default(now())
  // Marca de actualización automática
  updatedAt          DateTime @updatedAt

  // Índice para búsqueda por proveedor/ID
  @@unique([provider, providerId])
}
